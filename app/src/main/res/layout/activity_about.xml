<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AboutActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="Made by Sagar Karmakar"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:elevation="4dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="386dp"
        android:layout_height="73dp"
        android:layout_marginTop="16dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Developed by Sagar Karmakar. This high-performance biometric SDK is designed for real-time face recognition, liveness detection, and ID verification, optimized for Android apps with secure offline processing."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"></TextView>

    <ImageView
        android:id="@+id/imageEmail"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:tint="@color/md_theme_dark_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAbout"
        app:srcCompat="@drawable/ic_email"></ImageView>

    <TextView
        android:id="@+id/txtMail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="Email: sagarkarmakar10.2004@gmail.com"
        app:layout_constraintBottom_toTopOf="@+id/txtlinkedin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageEmail"
        app:layout_constraintTop_toBottomOf="@+id/txtAbout"></TextView>
    <ImageView
        android:id="@+id/imageLinkedin"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageEmail"
        app:srcCompat="@drawable/ic_linkedin"></ImageView>

    <TextView
        android:id="@+id/txtlinkedin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="Linkedin: sagar-karmakar-46791b285"
        app:layout_constraintStart_toEndOf="@id/imageLinkedin"
        app:layout_constraintTop_toTopOf="@id/imageLinkedin"
        app:layout_constraintBottom_toBottomOf="@id/imageLinkedin"
        android:clickable="true"
        android:focusable="true"
        >
    </TextView>

    <ImageView
        android:id="@+id/imageTelegram"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:tint="@color/md_theme_dark_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageLinkedin"
        app:srcCompat="@drawable/ic_telegram"></ImageView>

    <TextView
        android:id="@+id/txtTelegram"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Telegram: @sagarkarmakar"
        app:layout_constraintStart_toEndOf="@id/imageTelegram"
        app:layout_constraintTop_toTopOf="@id/imageTelegram"
        app:layout_constraintBottom_toBottomOf="@id/imageTelegram"
        >
    </TextView>

    <ImageView
        android:id="@+id/imageWhatsApp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:tint="@color/md_theme_dark_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageTelegram"
        app:srcCompat="@drawable/ic_whatsapp"></ImageView>

    <TextView
        android:id="@+id/txtWhatsapp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="WhatsApp: +91 7384735773"
        app:layout_constraintStart_toEndOf="@id/imageWhatsApp"
        app:layout_constraintTop_toTopOf="@id/imageWhatsApp"
        app:layout_constraintBottom_toBottomOf="@id/imageWhatsApp"
        >
    </TextView>

    <ImageView
        android:id="@+id/imageGithub"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:tint="@color/md_theme_dark_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageWhatsApp"
        app:srcCompat="@drawable/ic_github"></ImageView>

    <TextView
        android:id="@+id/txtGitHub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Github: https://github.com/Sagar3039"
        app:layout_constraintStart_toEndOf="@id/imageGithub"
        app:layout_constraintTop_toTopOf="@id/imageGithub"
        app:layout_constraintBottom_toBottomOf="@id/imageGithub"
        android:autoLink="web"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>