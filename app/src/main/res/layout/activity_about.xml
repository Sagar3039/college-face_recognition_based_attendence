<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AboutActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Made by Sagar Karmakar"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="386dp"
        android:layout_height="73dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical | left"
        android:text="Developed by Sagar Karmakar. This high-performance biometric SDK is designed for real-time face recognition, liveness detection, and ID verification, optimized for Android apps with secure offline processing."
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        tools:layout_editor_absoluteX="25dp">
    </TextView>

    <ImageView
        android:id="@+id/imageEmail"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAbout"
        android:tint="@color/md_theme_dark_primary"
        app:srcCompat="@drawable/ic_email">
    </ImageView>

    <TextView
        android:id="@+id/txtMail"
        android:layout_width="352dp"
        android:layout_height="31dp"
        android:layout_marginLeft="2dp"
        android:text="Email: sagarkarmakar10.2004@gmail.com"
        app:layout_constraintBottom_toBottomOf="@id/imageEmail"
        app:layout_constraintStart_toEndOf="@id/imageEmail"
        app:layout_constraintTop_toTopOf="@id/imageEmail"></TextView>

    <ImageView
        android:id="@+id/imageSkype"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:tint="@color/md_theme_dark_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageEmail"
        app:srcCompat="@drawable/ic_skype"></ImageView>

    <TextView
        android:id="@+id/txtSkype"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Skype: live:.cid.66e2522354b1049b"
        app:layout_constraintStart_toEndOf="@id/imageSkype"
        app:layout_constraintTop_toTopOf="@id/imageSkype"
        app:layout_constraintBottom_toBottomOf="@id/imageSkype"
        >
    </TextView>

    <ImageView
        android:id="@+id/imageTelegram"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:tint="@color/md_theme_dark_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageSkype"
        app:srcCompat="@drawable/ic_telegram"></ImageView>

    <TextView
        android:id="@+id/txtTelegram"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Telegram: @sagarkarmakar"
        app:layout_constraintStart_toEndOf="@id/imageTelegram"
        app:layout_constraintTop_toTopOf="@id/imageTelegram"
        app:layout_constraintBottom_toBottomOf="@id/imageTelegram"
        >
    </TextView>

    <ImageView
        android:id="@+id/imageWhatsApp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:tint="@color/md_theme_dark_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageTelegram"
        app:srcCompat="@drawable/ic_whatsapp"></ImageView>

    <TextView
        android:id="@+id/txtWhatsapp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="WhatsApp: +19092802609"
        app:layout_constraintStart_toEndOf="@id/imageWhatsApp"
        app:layout_constraintTop_toTopOf="@id/imageWhatsApp"
        app:layout_constraintBottom_toBottomOf="@id/imageWhatsApp"
        >
    </TextView>

    <ImageView
        android:id="@+id/imageGithub"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:tint="@color/md_theme_dark_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageWhatsApp"
        app:srcCompat="@drawable/ic_github"></ImageView>

    <TextView
        android:id="@+id/txtGitHub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Github: https://github.com/sagarkarmakar"
        app:layout_constraintStart_toEndOf="@id/imageGithub"
        app:layout_constraintTop_toTopOf="@id/imageGithub"
        app:layout_constraintBottom_toBottomOf="@id/imageGithub"
        android:autoLink="web"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>