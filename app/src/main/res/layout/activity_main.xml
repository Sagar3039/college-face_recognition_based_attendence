<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Top Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="8dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageNotice"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                app:srcCompat="@drawable/ic_tip"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@+id/imageNotice"
                android:text="This face recognizer is made by sagar"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@+id/imageNotice"
                android:hint="Search person by name"
                android:inputType="text"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Buttons Section -->
    <LinearLayout
        android:id="@+id/lytButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardBrand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- First row: Enroll and Subject -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonEnroll"
                style="@style/NavyButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Enroll" />

            <Button
                android:id="@+id/buttonSubject"
                style="@style/NavyButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Subject" />
        </LinearLayout>

        <!-- Second row: Settings and About -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSettings"
                style="@style/NavyButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Settings" />

            <Button
                android:id="@+id/buttonAbout"
                style="@style/NavyButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="About" />
        </LinearLayout>

        <!-- Third row: Identify (full width) -->
        <Button
            android:id="@+id/buttonIdentify"
            style="@style/NavyButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="0dp"
            android:text="Identify" />
    </LinearLayout>

    <!-- Total Students -->
    <TextView
        android:id="@+id/textTotalStudents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:layout_marginBottom="8dp"
        android:text="Total Students: 0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/lytButtons"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- User List -->
    <ListView
        android:id="@+id/listPerson"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        app:layout_constraintTop_toBottomOf="@id/textTotalStudents"
        app:layout_constraintBottom_toTopOf="@id/lytBrand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Brand Row at Bottom -->
    <LinearLayout
        android:id="@+id/lytBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Warning Message -->
    <TextView
        android:id="@+id/textWarning"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text=""
        android:background="@color/md_theme_light_error"
        android:visibility="gone"
        android:textSize="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="@+id/listPerson"
        app:layout_constraintStart_toStartOf="@+id/listPerson"
        app:layout_constraintTop_toTopOf="@+id/listPerson"
        app:layout_constraintBottom_toBottomOf="@+id/listPerson"
        >

    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>