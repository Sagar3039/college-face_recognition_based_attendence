<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c1b1f">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Student Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_card_bg"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/imageStudentFace"
                android:layout_width="145dp"
                android:layout_height="147dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rounded_card_bg"
                android:elevation="2dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_student_placeholder" />

            <LinearLayout
                android:layout_width="221dp"
                android:layout_height="115dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="18dp"
                android:paddingLeft="18dp">

                <TextView
                    android:id="@+id/textStudentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Name: "
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textStudentRoll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roll: "
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Attendance Section Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:text="ðŸ“š Attendance per Subject"
            android:textColor="#1928D0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Attendance List -->
        <LinearLayout
            android:id="@+id/layoutAttendanceList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_bg"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
